<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Blackjack.ViewModels"
             xmlns:ic="clr-namespace:FluentIcons.Maui;assembly=FluentIcons.Maui"
             x:Class="Blackjack.Views.MainMenuPage"
             x:DataType="viewmodels:MainMenuViewModel"
             Shell.NavBarIsVisible="False">

    <!-- Use proportional sizing like GameTablePage for responsive design -->
    <Grid RowDefinitions="*,Auto"
          RowSpacing="0">

        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="0,1">
                <GradientStop Color="{StaticResource Tertiary}"
                              Offset="0.0"/>
                <GradientStop Color="{StaticResource White}"
                              Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main Content - Centered in available space -->
        <Grid Grid.Row="0"
              VerticalOptions="Center"
              HorizontalOptions="Center">

            <VerticalStackLayout
                Spacing="16"
                VerticalOptions="Center"
                HorizontalOptions="Center">

                <!-- App Icon/Logo Area -->
                <Border
                    StrokeThickness="0"
                    Background="{StaticResource PrimaryBrush}"
                    HeightRequest="85"
                    WidthRequest="85"
                    StrokeShape="RoundRectangle 42"
                    HorizontalOptions="Center">
                    <ic:FluentIcon
                        Icon="PlayingCards"
                        IconVariant="Filled"
                        FontSize="46"
                        ForegroundColor="{StaticResource White}"/>
                </Border>

                <!-- Title -->
                <Label
                    Text="Blackjack"
                    FontSize="36"
                    FontAttributes="Bold"
                    TextColor="{StaticResource Primary}"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Margin="0,0,0,0"/>

                <!-- Subtitle -->
                <Label
                    Text="Play Vegas-style Blackjack"
                    FontSize="16"
                    TextColor="{StaticResource Gray500}"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Margin="0,0,0,4"/>

                <!-- Bankroll Display -->
                <Border
                    BackgroundColor="{StaticResource Gray100}"
                    StrokeThickness="0"
                    Padding="16,10"
                    StrokeShape="RoundRectangle 12"
                    HorizontalOptions="Center"
                    Margin="0,0,0,4">
                    <VerticalStackLayout Spacing="2">
                        <Label
                            Text="Current Bankroll"
                            FontSize="12"
                            TextColor="{StaticResource Gray500}"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"/>
                        <Label
                            Text="{Binding SavedBankroll, StringFormat='${0:N0}'}"
                            FontSize="24"
                            FontAttributes="Bold"
                            TextColor="{StaticResource Primary}"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Start Game Button (Primary) -->
                <Button
                    Text="Start Game"
                    Command="{Binding StartGameCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="{StaticResource White}"
                    FontSize="18"
                    FontAttributes="Bold"
                    HeightRequest="48"
                    WidthRequest="260"
                    CornerRadius="24"
                    HorizontalOptions="Center">
                    <Button.Shadow>
                        <Shadow Brush="{StaticResource Primary}"
                                Opacity="0.3"
                                Radius="10"
                                Offset="0,4"/>
                    </Button.Shadow>
                </Button>

                <!-- Reset Bankroll Button -->
                <Button
                    Text="Reset Bankroll"
                    Command="{Binding ResetBankrollCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Gray600}"
                    FontSize="14"
                    HeightRequest="36"
                    WidthRequest="180"
                    HorizontalOptions="Center"
                    IsVisible="{Binding HasSavedBankroll}"/>

                <!-- Settings Button (Secondary) -->
                <Border
                    Stroke="{StaticResource Secondary}"
                    StrokeThickness="2"
                    BackgroundColor="Transparent"
                    HeightRequest="44"
                    WidthRequest="260"
                    StrokeShape="RoundRectangle 22"
                    HorizontalOptions="Center">
                    <Grid>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding OpenSettingsCommand}"/>
                        </Grid.GestureRecognizers>
                        <HorizontalStackLayout
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Spacing="8">
                            <ic:FluentIcon
                                Icon="Settings"
                                IconVariant="Regular"
                                FontSize="18"
                                ForegroundColor="{StaticResource Secondary}"/>
                            <Label
                                Text="Settings"
                                FontSize="16"
                                TextColor="{StaticResource Secondary}"
                                VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Grid>
                </Border>

                <!-- Exit Button (Windows Only) -->
                <Button
                    x:Name="ExitButton"
                    Text="Exit"
                    Command="{Binding ExitAppCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Gray500}"
                    FontSize="13"
                    HeightRequest="36"
                    WidthRequest="90"
                    HorizontalOptions="Center"
                    Margin="0,4,0,0"
                    IsVisible="False"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Footer - Always at bottom -->
        <Label
            Grid.Row="1"
            Text="v1.0"
            FontSize="11"
            TextColor="{StaticResource Gray400}"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            VerticalOptions="End"
            Margin="0,0,0,10"/>
    </Grid>
</ContentPage>
