<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Blackjack.ViewModels"
             xmlns:ic="clr-namespace:FluentIcons.Maui;assembly=FluentIcons.Maui"
             x:Class="Blackjack.Views.MainMenuPage"
             x:DataType="viewmodels:MainMenuViewModel"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="*,Auto"
          Padding="20,10">
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="0,1">
                <GradientStop Color="{StaticResource Tertiary}"
                              Offset="0.0"/>
                <GradientStop Color="{StaticResource White}"
                              Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main Content -->
        <VerticalStackLayout
            Grid.Row="0"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Spacing="16">

            <!-- App Icon/Logo Area -->
            <Border
                StrokeThickness="0"
                Background="{StaticResource PrimaryBrush}"
                HeightRequest="85"
                WidthRequest="85"
                StrokeShape="RoundRectangle 42">
                <ic:FluentIcon
                    Icon="PlayingCards"
                    IconVariant="Filled"
                    FontSize="46"
                    ForegroundColor="{StaticResource White}"/>
            </Border>

            <!-- Title -->
            <Label
                Text="Blackjack"
                FontSize="36"
                FontAttributes="Bold"
                TextColor="{StaticResource Primary}"
                HorizontalOptions="Center"
                Margin="0,0,0,0"/>

            <!-- Subtitle -->
            <Label
                Text="Play Vegas-style Blackjack"
                FontSize="16"
                TextColor="{StaticResource Gray500}"
                HorizontalOptions="Center"
                Margin="0,0,0,4"/>

            <!-- Start Game Button (Primary) -->
            <Button
                Text="Start Game"
                Command="{Binding StartGameCommand}"
                BackgroundColor="{StaticResource Primary}"
                TextColor="{StaticResource White}"
                FontSize="18"
                FontAttributes="Bold"
                HeightRequest="48"
                WidthRequest="260"
                CornerRadius="24"
                HorizontalOptions="Center">
                <Button.Shadow>
                    <Shadow Brush="{StaticResource Primary}"
                            Opacity="0.3"
                            Radius="10"
                            Offset="0,4"/>
                </Button.Shadow>
            </Button>

            <!-- Settings Button (Secondary) -->
            <Border
                Stroke="{StaticResource Secondary}"
                StrokeThickness="2"
                BackgroundColor="Transparent"
                HeightRequest="44"
                WidthRequest="260"
                StrokeShape="RoundRectangle 22"
                HorizontalOptions="Center">
                <Grid>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenSettingsCommand}"/>
                    </Grid.GestureRecognizers>
                    <HorizontalStackLayout
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Spacing="8">
                        <ic:FluentIcon
                            Icon="Settings"
                            IconVariant="Regular"
                            FontSize="18"
                            ForegroundColor="{StaticResource Secondary}"/>
                        <Label
                            Text="Settings"
                            FontSize="16"
                            TextColor="{StaticResource Secondary}"
                            VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Grid>
            </Border>

            <!-- Exit Button (Windows Only) -->
            <Button
                x:Name="ExitButton"
                Text="Exit"
                Command="{Binding ExitAppCommand}"
                BackgroundColor="Transparent"
                TextColor="{StaticResource Gray500}"
                FontSize="13"
                HeightRequest="36"
                WidthRequest="90"
                HorizontalOptions="Center"
                Margin="0,4,0,0"
                IsVisible="False"/>
        </VerticalStackLayout>

        <!-- Footer -->
        <Label
            Grid.Row="1"
            Text="v1.0"
            FontSize="11"
            TextColor="{StaticResource Gray400}"
            HorizontalOptions="Center"
            Margin="0,0,0,8"/>
    </Grid>
</ContentPage>
