<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Blackjack.ViewModels"
             xmlns:ic="clr-namespace:FluentIcons.Maui;assembly=FluentIcons.Maui"
             x:Class="Blackjack.Views.MainMenuPage"
             x:DataType="viewmodels:MainMenuViewModel"
             Shell.NavBarIsVisible="False">

    <!-- Background Gradient -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="0,1">
                <GradientStop Color="{StaticResource Tertiary}"
                              Offset="0.0"/>
                <GradientStop Color="{StaticResource White}"
                              Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Full-screen horizontal landscape layout using proportional columns -->
        <Grid ColumnDefinitions="0.15*,Auto,0.05*,Auto,0.05*,Auto,0.05*,Auto,0.15*"
              VerticalOptions="Fill"
              HorizontalOptions="Fill">

            <!-- Column 1: Logo -->
            <Border
                Grid.Column="1"
                StrokeThickness="0"
                Background="{StaticResource PrimaryBrush}"
                HeightRequest="90"
                WidthRequest="90"
                StrokeShape="RoundRectangle 45"
                VerticalOptions="Center"
                HorizontalOptions="Center">
                <ic:FluentIcon
                    Icon="PlayingCards"
                    IconVariant="Filled"
                    FontSize="48"
                    ForegroundColor="{StaticResource White}"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
            </Border>

            <!-- Column 3: Title and Subtitle -->
            <VerticalStackLayout
                Grid.Column="3"
                Spacing="4"
                VerticalOptions="Center"
                HorizontalOptions="Start">
                <Label
                    Text="Blackjack"
                    FontSize="32"
                    FontAttributes="Bold"
                    TextColor="{StaticResource Primary}"/>
                <Label
                    Text="Play Casino-Style Blackjack"
                    FontSize="13"
                    TextColor="{StaticResource Gray500}"/>
            </VerticalStackLayout>

            <!-- Column 5: Bankroll Display -->
            <Border
                Grid.Column="5"
                BackgroundColor="{StaticResource Gray100}"
                StrokeThickness="0"
                Padding="16,10"
                StrokeShape="RoundRectangle 12"
                VerticalOptions="Center"
                HorizontalOptions="Center">
                <VerticalStackLayout Spacing="2" HorizontalOptions="Center">
                    <Label
                        Text="Bankroll"
                        FontSize="12"
                        TextColor="{StaticResource Gray500}"
                        HorizontalOptions="Center"/>
                    <Label
                        Text="{Binding SavedBankroll, StringFormat='${0:N0}'}"
                        FontSize="22"
                        FontAttributes="Bold"
                        TextColor="{StaticResource Primary}"
                        HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>

            <!-- Column 7: Buttons -->
            <VerticalStackLayout
                Grid.Column="7"
                Spacing="10"
                VerticalOptions="Center"
                HorizontalOptions="Center">

                <!-- Start Game Button -->
                <Button
                    Text="Start Game"
                    Command="{Binding StartGameCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="{StaticResource White}"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="46"
                    WidthRequest="140"
                    CornerRadius="23">
                    <Button.Shadow>
                        <Shadow Brush="{StaticResource Primary}"
                                Opacity="0.3"
                                Radius="8"
                                Offset="0,3"/>
                    </Button.Shadow>
                </Button>

                <!-- Settings Button -->
                <Border
                    Stroke="{StaticResource Secondary}"
                    StrokeThickness="2"
                    BackgroundColor="Transparent"
                    HeightRequest="42"
                    WidthRequest="140"
                    StrokeShape="RoundRectangle 21">
                    <Grid>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding OpenSettingsCommand}"/>
                        </Grid.GestureRecognizers>
                        <HorizontalStackLayout
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Spacing="6">
                            <ic:FluentIcon
                                Icon="Settings"
                                IconVariant="Regular"
                                FontSize="16"
                                ForegroundColor="{StaticResource Secondary}"/>
                            <Label
                                Text="Settings"
                                FontSize="14"
                                TextColor="{StaticResource Secondary}"
                                VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Grid>
                </Border>

                <!-- Reset Bankroll Button -->
                <Button
                    Text="Reset"
                    Command="{Binding ResetBankrollCommand}"
                    BackgroundColor="{StaticResource Gray200}"
                    TextColor="{StaticResource Gray600}"
                    FontSize="13"
                    HeightRequest="36"
                    WidthRequest="100"
                    CornerRadius="18"
                    HorizontalOptions="Center"
                    IsVisible="{Binding HasSavedBankroll}"/>

                <!-- Exit Button (Windows Only) -->
                <Button
                    x:Name="ExitButton"
                    Text="Exit"
                    Command="{Binding ExitAppCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Gray500}"
                    FontSize="13"
                    HeightRequest="32"
                    WidthRequest="70"
                    HorizontalOptions="Center"
                    IsVisible="False"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Version in corner -->
        <Label
            Text="v1.0"
            FontSize="10"
            TextColor="{StaticResource Gray400}"
            HorizontalOptions="End"
            VerticalOptions="End"
            Margin="0,0,15,10"/>
    </Grid>
</ContentPage>
